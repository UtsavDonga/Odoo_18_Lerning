<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  List view  -->
    <record model="ir.ui.view" id="view_hospital_patient_list">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name" />
                <field name="date_of_birth" optional="show" />
                <field name="age" optional="show" />
                <field name="gender" optional="hide" />
                <field name="email" />
            </list>
        </field>
    </record>
    <!--  Form View  -->
    <record model="ir.ui.view" id="view_hospital_patient_form">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_of_birth" />
                            <field name="age" readonly="1" />
                        </group>
                        <group>
                            <field name="gender" />
                            <field name="email" />
                            <field name="tag_ids" widget='many2many_tags' />
                        </group>
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>
    <!-- ir.actions.act_window â†’ Defines an action that opens the patient model. -->
    <record id="action_hospital_patients" model="ir.actions.act_window">
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new patient
            </p>
        </field>
    </record>
</odoo>